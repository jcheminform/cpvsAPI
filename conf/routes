# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# API Endpoints
GET     /profiles/receptorName/:r_name				         controllers.Profiles.profileByReceptorName(r_name: String)
GET		/profiles/pdbCode/:pdbCode							 controllers.Profiles.profileByPdbCode(pdbCode: String)	
GET		/receptors											 controllers.ReceptorsAndPdbs.receptorAndPdbIndex()	

# Home page
GET     /                           controllers.Profiles.welcome()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
