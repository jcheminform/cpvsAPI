{
  "swagger": "2.0",
  "info": {
    "description": "This is API documentation for [Conformal Prediction based Virtual Screening](https://github.com/laeeq80/spark-cpvs-vina). The API is responsible for two web services i.e. providing prediction profiles for compounds, real-time docking for small number of molecules. \n\nA profile contains ligand id, its prediction and docking score against multiple receptors.",
    "title": "Docking Profile As A Service (DPAAS) API Documentation",
    "version": "0.0.2-beta"
  },
  "host": "",
  "schemes": [
    "http"
  ],
  "basePath": "/",
  "paths": {
    "/predictions/{smiles}": {
      "get": {
        "tags": [
          "Profile"
        ],
        "summary": "Get ligand predictive profile by smiles",
        "description": "Takes in smiles and returns its profile predictions prediction, receptor(s) name and receptor(s) PDB code. ",
        "operationId": "profileBySmiles",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "smiles",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "Ligand id that need to be considered for profiling"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Predictions"
              }
            }
          },
          "400": {
            "description": "Invalid Smiles"
          },
          "404": {
            "description": "Ligand Profile Not Found"
          },
          "405": {
            "description": "Ligand Profile Not Found"
          }
        }
      }
    },
    "/dockings/{smiles}": {
      "post": {
        "tags": [
          "Profile"
        ],
        "summary": "Make docking profile by smiles",
        "description": "Takes in a single smiles, and make docking against the receptor and save the docking score.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "smiles",
            "in": "path",
            "description": "Smiles that need to be considered for docking",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Score"
              }
            }
          },
          "400": {
            "description": "Incorrect Smiles"
          }
        }
      }
    }
  },
  "definitions": {
    "Score": {
      "type": "object",
      "properties": {
        "l_score": {
          "type": "string",
          "example": "-3.9"
        }
      }
    },
    "Predictions": {
      "type": "object",
      "required": [
        "smiles"
      ],
      "properties": {
        "l_prediction": {
          "type": "string",
          "example": "BAD"
        },
        "r_name": {
          "type": "string",
          "example": "hiv1_protease"
        },
        "r_pdbCode": {
          "type": "string",
          "example": "1AJV"
        }
      }
    }
  }
}
